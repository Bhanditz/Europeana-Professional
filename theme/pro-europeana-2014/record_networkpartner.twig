{% set curtitle = record.first_name ~ ' ' ~ record.last_name %}
{% include '_header.twig' %}

{% set events = record.related('events') %}
{% set pressreleases = record.related('pressreleases') %}
{% set publications = record.related('publications') %}
{% set blogposts = record.related('blogposts') %}
{% set contacts = record.related('person') %}

<!-- Start content -->
<main role="main" class="l-page">
<div class="lc">
    <!-- Start grid -->
    <div class="grid-main">
        <div class="l-content">
            <div class="l-breadcrumbs">
                {% include 'items/_item-breadcrumb.twig' %}
            </div>

            {{ dump(record) }}

            <div class="maincontent">
                {% if record.network_participation is not empty %}
                     <div class="network-participation">
                         {% for npl in record.network_participation %}
                             {% if loop.first == true %}
                             <h1>{{ npl }}</h1>
                             {% endif %}
                         {% endfor %}
                     </div>
                {% endif %}
                <h1 class="title fn">{{record.first_name}} {{record.last_name}}</h1>

                <div class="section contact-detail">
                    <div class="l-contact-photo">
                        {% if record.image %}
                            <img src="{{ record.image|image(300,400) }}" alt="{{ record.first_name }} {{ record.last_name }}" class="photo" />
                        {% else %}
                            <img src="{{ app.paths.theme }}images/fpo_avatar.png" alt="{{ record.first_name }} {{ record.last_name }}" class="photo missing" />
                        {% endif %}
                    </div><!--
                    --><div class="l-contact">
                        <div class="contact-methods cf">
                            <div class="jobdetails">
                                <h2 class="job-title">{{record.job_title}}</h2>
                                {% if record.company_url != "" %}
                                    <div class="fn">
                                        <a href="{{ record.company_url }}" target="_blank">
                                            <!-- <svg class="icon icon-bookmark">
                                                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-bookmark"></use>
                                            </svg> -->
                                            {{ record.company }}
                                            <svg class="icon icon-linkout">
                                                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-linkout"></use>
                                            </svg>
                                        </a>
                                    </div>
                                {% else %}
                                    <div class="fn">{{ record.company }}</div>
                                {% endif %}

                                <div>{{ record.country }}</div>

                                <div>{{ record.sector }}</div>

                                {% if record.public_email != '' %}
                                <div class="item-sendemail">
                                    <a class="email" href="mailto:{{ record.public_email }}">
                                        <svg class="icon icon-sendemail">
                                            <use xlink:href="#icon-sendemail"></use>
                                        </svg>
                                        <span>{{ record.public_email }}</span>
                                    </a>
                                </div>
                                {% endif %}
                            </div>

                            <div class="contact-internal">

                                {% if record.public_phone != '' %}
                                <div class="item-phone-work">
                                    <svg class="icon icon-phone-work">
                                        <use xlink:href="#icon-phone-work"></use>
                                    </svg>
                                    <span class="tel">{{ record.public_phone }}</span>
                                </div>
                                {% endif %}

                                {% if record.other_number != '' %}
                                <div class="item-phone-mobile">
                                    <svg class="icon icon-phone-mobile">
                                        <use xlink:href="#icon-phone-mobile"></use>
                                    </svg>
                                    <span class="tel">{{ record.other_number }}</span>
                                </div>
                                {% endif %}
                            </div>

                            <ul class="contact-external">
                                {% if record.twitter != '' %}
                                <li><a href="{{ record.twitter }}"><svg class="icon icon-twitter"><use xlink:href="#icon-twitter"></use></svg>{{ record.twitter|split('/')|last }}</a></li>
                                {% endif %}
                                {% if record.skype != '' %}
                                <li><a href="skype:{{ record.skype }}"><svg class="icon icon-skype"><use xlink:href="#icon-skype"></use></svg>{{ record.skype }}</a></li>
                                {% endif %}
                                {% if record.linkedin != '' %}
                                <li><a href="{{ record.linkedin }}"><svg class="icon icon-linkedin"><use xlink:href="#icon-linkedin"></use></svg>{{ record.first_name }} {{ record.last_name }}</a></li>
                                {% endif %}
                            </ul>
                        </div>


                        <div class="contact-additional">
                            {{ record.introduction }}

                            {% if (record.other_links_1 or record.other_links_2 or record.other_links_3 ) %}
                            <ul class="nav">
                                {% if record.other_links_1 %}
                                <li><a href="{{ record.other_links_1 }}">{{ record.other_links_1 }}</a></li>
                                {% endif %}
                                {% if record.other_links_2 %}
                                <li><a href="{{ record.other_links_2 }}">{{ record.other_links_2 }}</a></li>
                                {% endif %}
                                {% if record.other_links_3 %}
                                <li><a href="{{ record.other_links_3 }}">{{ record.other_links_3 }}</a></li>
                                {% endif %}
                            </ul>
                            {% endif %}

                            {% if record.network_participation is not empty %}
                                <div class="network-participation">
                                    {% for npl in record.network_participation %}
                                        {% if loop.first == true %}Also {% endif %}
                                        {% if loop.first == false %}{% if loop.last == true %}and{% else %},{% endif %}{% endif %}
                                        {{ npl }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {% if events %}
                <div class="section">
                    <h2>Speaking at</h2>
                    <div class="results">
                        <ul class="results-list">
                            {% for event in events %}
                                {% include 'items/_item-list.twig' with {record: event} %}
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                {% endif %}

                {% if pressreleases %}
                <div class="section">
                    <h2>Press Releases</h2>
                    <ul class="results-list">
                        {% for pressrelease in pressreleases %}
                            {% include 'items/_item-list.twig' with {record: pressrelease} %}
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}

                {% if publications %}
                <div class="section">
                    <h2>Publications</h2>
                    <ul class="results-list">
                        {% for publication in publications %}
                            {% include 'items/_item-list.twig' with {record: publication} %}
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}

                {% if blogposts %}
                <div class="section">
                    <h2>Blog posts</h2>
                    <ul class="results-list">
                        {% for blogpost in blogposts %}
                            {% include 'items/_item-list.twig' with {record: blogpost} %}
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
            </div>
        </div><!--
        --><div class="l-sidebar">
            <div class="inner">
                {# Don't display contacts in the sidebar. ----
                 {% setcontent staff_structure = 'structures/staff' returnsingle %}
                 {% set contacts = staff_structure.related('persons') %}
                 {% include 'items/_item-help.twig' with { records: contacts} %}
                 ------ #}
            </div>
        </div>
    </div>
    <!-- End grid -->
</div>
</main>
<!-- End Content -->

{% include '_footer.twig' %}
