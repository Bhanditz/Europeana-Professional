{% include '_header.twig' %}

{% set contacts = record.related('persons') %}

{# set 'global' structures for path generating page and structures #}
{% import 'macros/_helper.twig' as helper %}
{% setcontent STRUCTURES = 'structures' %}

<!-- Start content -->
<main role="main" class="l-page">
<div class="lc">
	<!-- Start grid -->
	<div class="grid-main">

		<div class="l-content">

			<div class="l-breadcrumbs">
				{% include 'items/_item-breadcrumb.twig' %}
			</div>
		
			<div class="maincontent">
				
				<div class="textcontent prose">
	
					<h1 class="title">{{ record.title }}</h1>
					
					<p class="intro">{{ record.intro }}</p>
	
					{{ record.body|raw }}
				</div>

				{% if record.filelist_files %}
				<div class="section files">
					<h2>{{ record.contenttype.fields.filelist_files.label }}</h2>
					{% include 'items/_item-filelist-detail.twig' with { filelist: record.filelist_files } %}
				</div>
				{% endif %}
				
				{% include 'items/_item-related.twig' with {title: "Next steps", short: true} %}
	
			</div>
		</div><!--

	 --><div class="l-sidebar">
	 		<div class="inner">
	 		
				{% include 'items/_item-help.twig' with { records: contacts, title: "Need help?", use_secondary_mail: record.secondary_mail } %}

				{% if record.filelist_downloads %}
				<div class="downloads">
					<h2>{{ record.contenttype.fields.filelist_downloads.label }}</h2>
					{% include 'items/_item-filelist-detail.twig' with { filelist: record.filelist_downloads, owner: 'hide' } %}
				</div>
				{% endif %}

				{% if record.support_navigation != "" %}
				<ul class="nav_tertiary">
					{{ record.support_navigation|raw }}
				</ul>
				{% endif %}
				
			</div>

		</div>
	</div>
	<!-- End grid -->
</div>
</main>
<!-- End Content -->

{% include '_footer.twig' %}
