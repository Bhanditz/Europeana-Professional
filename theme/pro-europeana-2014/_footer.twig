<!-- Start Footer -->

{# set possible subsite class #}
{% set subsite = '' %}
{% if (record is defined and parent is defined) %}
	{% set subsite = subsite(record, parent)  %}
{% endif %}

{# set subsite footer #}
{% if subsite|length %}
	{% setcontent footer = 'Footers' where {id: subsite.footer} %}
	{% set location = footer.related('location') %}
	{% set logolink = subsite.path %}
{# set default footer #}
{% else %}
	{% setcontent home = "homepage/latest/1" returnsingle %}
	{% set footer = home.related('footers')|first %}
	{% setcontent location = 'Location' where {'europeana_office' : '1' } returnsingle %}
	{% set logolink = paths.root %}
{% endif %}


<footer class="footer" role="contentinfo">
    <div class="lc">
        <div class="grid">
            <div class="l-contact">
                <div>
                	<a href="{{ logolink }}">
	                	<img src="{{ footer.image|image }}" title="{{ footer.image|title }}" alt="{{ footer.values['image'].title }}">
                	</a>
                </div>

                <div class="address">
                {% if location %}
                	{{ location.title }}
                	{% for addressitem in location.geolocation.formatted_address|split(',')  %}
                		<br /> {{ addressitem }} 
                	{% endfor %}
                {% endif %}
                </div>

            </div><!--

        --><div class="l-content">

                <div class="l-sitemap grid">
                <div class="l-linklist">
                	<div class="inner">
                		{{ footer.linklist_left}}
                	</div>
                	</div><!--
             --><div class="l-linklist">
             		<div class="inner">
                		{{ footer.linklist_right}}
                	</div>
                	</div>
                </div>

                <div class="grid">
                    <div class="l-mission">
                        {{ footer.mission}}
                    </div><!--

                 --><div class="l-othersites">
                	 	<div class="l-linklist inline-list">
						{{ footer.linklist_other }}
						</div>
                    </div>
                </div>
            </div><!--

        --><div class="l-nextsteps">

                <div class="social-links">
                	{{ footer.socialmedia|raw }}
                </div>
            </div>
        </div>

    </div>

    <div class="sub-footer">

        {{ menu('footer', '_submenu.twig') }}

        <p class="copyright">Co-funded by the European Union.</p>

    </div>

</footer>


</div> {# closing "pusher" #}

<script src="{{ paths.theme }}js/init.js"></script>
<script src="{{ paths.theme }}js/minRead.js"></script>


</body>
</html>
<!-- End Footer -->