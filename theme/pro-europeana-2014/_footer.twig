<!-- Start Footer -->


{% setcontent footer = 'Footer' returnsingle %}
{% setcontent location = 'Location' where {'europeana_office' : '1' } returnsingle %}


<footer class="footer" role="contentinfo">
    <div class="lc">
        <div class="grid">
            <div class="l-contact">
                <div>
                	<a href="{{ paths.root }}">
	                	<img src="{{ footer.image|image }}" title="{{ footer.values['image'].title }}" alt="{{ footer.values['image'].title }}">
                	</a>
                </div>

                <div class="address">
                	{{ location.title }}
                	{% for addressitem in location.geolocation.formatted_address|split(',')  %}
                		<br /> {{ addressitem }} 
                	{% endfor %}
                </div>

            </div><!--

        --><div class="l-content">

                <div class="l-sitemap grid">
                <div class="l-linklist">
                	<div class="inner">
                		{{ footer.linklist_left}}
                	</div>
                	</div><!--
             --><div class="l-linklist">
             		<div class="inner">
                		{{ footer.linklist_right}}
                	</div>
                	</div>
                </div>

                <div class="grid">
                    <div class="l-mission">
                        {{ footer.mission}}
                    </div><!--

                 --><div class="l-othersites">
                	 	<div class="l-linklist inline-list">
						{{ footer.linklist_other }}
						</div>
                    </div>
                </div>
            </div><!--

        --><div class="l-nextsteps">

                <div class="social-links">
                	{{ footer.socialmedia|raw }}
                </div>
            </div>
        </div>

    </div>

    <div class="sub-footer">

        {{ menu('footer', '_submenu.twig') }}

        <p class="copyright">Co-funded by the European Union.</p>

        {#
        <a class="licensehr" rel="license" href="http://creativecommons.org/licenses/by-sa/4.0/">
            <img alt="Creative Commons License" src="/images/cc.png"> (hardcoded)
        </a>
        #}
        
    </div>

</footer>

</div> {# closing "pusher" #}

<script src="{{ paths.theme }}js/init.js"></script>

</body>
</html>
<!-- End Footer -->