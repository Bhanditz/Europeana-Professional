{% macro parentlink(structures, child) %}

	{{ paths.root }}
	
	{% set parentID = child.parent %}
	{% if parentID is empty %}
		{{ _self.parentPathPage(structures, child) }}
	{% else %}
		{{ _self.parentPath(structures, parentID) }}
	{% endif %}
	
	{{ child.slug }}
	
{% endmacro %}

{% macro parentPath(structures, parentID) %}
	{% for structure in structures if (structure.id == parentID) %}
			{{ _self.parentPath(structures, structure.parent) }}
			{{ structure.slug }}/
	{% endfor %}
{% endmacro %}

{% macro parentPathPage(structures, page) %}
	{% for structure in structures if (structure.slug == page.group.slug) %}
			{{ _self.parentPath(structures, structure.id) }}		
	{% endfor %}
{% endmacro %}




	
