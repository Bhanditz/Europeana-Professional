{% include '_header.twig' %}

<!-- Start content -->
<main role="main" class="l-page">
<div class="lc">
	<!-- Start grid -->
	<div class="grid-main">

		<div class="l-content">

		<div class="l-breadcrumbs">
			{% include 'items/_item-breadcrumb.twig' with {name: app.request.get('q') } %}
		</div>
		
		<div class="l-filter filters">
			<form action="#">
			    <fieldset>
			    <h4 class="title">Include:</h4>
			        <ul class="nav">
			            <li><label for="checkbox1">Pages <input id="checkbox1" name="checkbox" type="checkbox" checked="checked"></label></li>
			            <li><label for="checkbox2">Documents <input id="checkbox2" name="checkbox" type="checkbox" checked="checked"></label></li>
			            <li><label for="checkbox3">Blog Posts <input id="checkbox3" name="checkbox" type="checkbox" checked="checked"></label></li>
			            <li><label for="checkbox4">Events <input id="checkbox4" name="checkbox" type="checkbox" checked="checked"></label></li>
			            <li><label for="checkbox4">Publications <input id="checkbox4" name="checkbox" type="checkbox" checked="checked"></label></li>
			            <li><label for="checkbox4">Jobs <input id="checkbox4" name="checkbox" type="checkbox" checked="checked"></label></li>
			            <li><label for="checkbox4">Persons <input id="checkbox4" name="checkbox" type="checkbox" checked="checked"></label></li>
			        </ul>
			    </fieldset>
			</form>

			{searchmistake }
				<div class="searchterms">
					Did you mean "EDM documentation"? 
					<div class="resultsnum">Showing <strong>75</strong> results for <strong>"EDM documentation"</strong></div>
				</div>
			{ searchmistake }
		</div>

		{% if searchresults is empty %}
		<article class="maincontent">
			<div class="textcontent">

				<div class="prose">
				<p>Unfortunately we haven't found what you are looking for, please check the spelling, or have a look at some content that may interest you.
				</p>
				</div>
			</div>
			
			{% include 'items/_item-related.twig' with {title: "You might also like:", short: true} %}
			
		</article>
		
		{% else %}
		
		{#
			render the search results
		#}
		<div class="maincontent">
			<div class="results">
				<ul class="results-list">
				{% for record in searchresults %}
					
					{% include 'items/_item-list.twig' with { record: record } %}
					
				{% endfor %}
				</ul>
				
				{% if pager is defined %}
					{% include '_sub_pager.twig' with { class: '', surr: 2, pager: pager } %}
				{% endif %}
				
			</div>
		</div>
		
		{% endif %}
		
		</div><!--

	 --><div class="l-sidebar">

		</div>
	</div>
	<!-- End grid -->
</div>
</main>
<!-- End Content -->


{% include '_footer.twig' %}

