<div class="signup">
    <form
       method="post"
       action="http://europeana.us3.list-manage.com/subscribe/post"
       class="inline-form newsletter-form"
       id="mc-embedded-subscribe-form"
       name="mc-embedded-subscribe-form"
       target="_blank"
       onSubmit="return checkForm()">

       <script type="text/javascript">

         // Inline javascript for simplicity in porting to externally developed sites.
         //   Note: (there is dependency on jquery here that should be satisfied by whoever uses this molecule)

         var checkForm = function(form_obj) {
           var why = "";
           var email = $('#mce-EMAIL');
           var filter=/^[a-z0-9_\-\.\+]+@[a-z0-9_\-\.]+\.[a-z]{2,4}$/i;

           if (email.val().length==0) {
             why += "* Email must be specified\n";
           }
           else if (!filter.test(email.val())) {
             why += "* Email must be a valid email address.\n";
           }


           if (why != "") {
             alert(why);
             return false;
           }
           return true;
         };
       </script>

      <label for="newsletter-field" class="title">Sign up for our newsletter</label>

      <div class="inline-container">
        <input type="hidden" name="u" value="ad318b7566f97eccc895e014e">
        <input type="hidden" name="id" value="e82f7fb3f1">

        <input placeholder="email address"
           type="email"
           name="EMAIL"
           value=""
           id="mce-EMAIL"
           class="js-placeholder newsletter-field" />
        <button class="newsletter-submit">
            <svg class="icon icon-check">
                <use xlink:href="#icon-check"></use>
            </svg>
        </button>
      </div>


    </form>

</div>