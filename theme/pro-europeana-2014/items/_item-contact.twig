{% if record %}

<div class="help-contact">

	<h4>About the Author (hardcoded)</h4>

	<img src="{{ record.image|image }}" alt="{{ record.values['image'].title }}" />

	<h5>Contact: (hardcoded)</h5>

	<div class="vcard">
		<div class="fn">{{ record.first_name }} {{ record.last_name }}</div>
		{% if record.telephone_number != "" %}
		<div class="tel">{{ record.telephone_number }}</div>
		{% endif %}
		{% if record.email != "" %}
		<a class="email" href="mailto:{{ record.email }}">{{ record.email }}</a>
		{% endif %}
	</div>

</div>

{% endif %}

