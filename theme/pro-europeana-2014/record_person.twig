{% include '_header.twig' %}

<br><br><br><br>
<h1>person DETAIL</h1>

<!-- Start content -->
<main role="main" class="l-page">
<div class="lc">
	<!-- Start grid -->
	<div class="grid">

		<div class="l-content">

		<div class="l-breadcrumbs">
			{{ molecules-breadcrumbs }}
		</div>
		
		<article class="maincontent">
			<div class="textcontent">

				<div class="articleheader">

					<h1 class="title">{{ record.title }}</h1>

					<div class="item-meta-primary">
						
						{# start - author-name#}
						<span class="author-name">By: <a href="#">{{name.first}} {{name.last}}</a></span>
						{# end - author-name#}
						
						{# start - read-time#}
						<span class="read-time">{{minute.short}} mins to read</span>
						{# end - read-time#}
						
					</div>

					<div class="item-meta-secondary">
						{{ molecules-item-date }}
						{{ molecules-item-tags }}
						{{ molecules-item-comments }}
					</div>

				</div>

				<div class="prose">
				{{ organisms-article-body }}
				</div>
			</div>

			{{ molecules-related-images }}

			<aside>
				<<<<< Disqus Comments go here >>>>>
			</aside>


		</article>
		</div><!--

	 --><div class="l-sidebar">
	 		<div class="inner">

				{{ molecules-help-contact }}

				
				<div class="downloads">
					<h4>Downloads</h4>
					{{ molecules-file-list-small }}
				</div>
				
			</div>

		</div>
	</div>
	<!-- End grid -->
</div>
</main>
<!-- End Content -->


{% include '_footer.twig' %}

